<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".KurisuActivity">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/view"
            android:src="@drawable/background_5"
            android:scaleType="centerCrop"/>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:stretchColumns="*"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="@string/tina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bTina"
                    android:onClick="playSound"/>
            <Button
                    android:text="@string/cel7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bCel7"
                    android:onClick="playSound"/>
            <Button
                    android:text="@string/kurisu_laugh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bKurisuLaugh"
                    android:onClick="playSound"/>

        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="@string/christina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bChristina"
                    android:onClick="playSound"/>
            <Button
                    android:text="@string/nope"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bWrong"
                    android:onClick="playSound"/>
            <Button
                    android:text="@string/hououin_san"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bHououinSan"
                    android:onClick="playSound"/>

        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="@string/channeler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bChanneler"
                    android:onClick="playSound"/>
            <Button
                    android:text="@string/tsundere"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bTsundere"
                    android:onClick="playSound"/>
            <Button
                    android:text="@string/surprised"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bSurprised"
                    android:onClick="playSound"/>

        </TableRow>
    </TableLayout>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="?attr/homeAsUpIndicator" android:id="@+id/imageButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="2dp"
            android:onClick="back"/>

</androidx.constraintlayout.widget.ConstraintLayout>