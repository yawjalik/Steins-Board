<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MoekaActivity">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/view"
            android:src="@drawable/background_5"
            android:scaleType="centerCrop"/>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:stretchColumns="*"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="Where"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bK1"
                    android:onClick="playSound"/>
            <Button
                    android:text="can"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bK2"
                    android:onClick="playSound"/>
            <Button
                    android:text="i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bK3"
                    android:onClick="playSound"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bK4"
                    android:onClick="playSound"/>
            <Button
                    android:text="the"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bK5"
                    android:onClick="playSound"/>
            <Button
                    android:text="@string/ibn5100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bIbn5100"
                    android:onClick="playSound"/>
        </TableRow>
    </TableLayout>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="?attr/homeAsUpIndicator" android:id="@+id/imageButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="2dp"
            android:onClick="back"/>
</androidx.constraintlayout.widget.ConstraintLayout>