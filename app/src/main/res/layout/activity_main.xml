<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:foregroundTint="#FFFFFF">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/view"
            android:src="@drawable/background_5"
            android:scaleType="centerCrop"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp">
            <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp" app:srcCompat="@drawable/okarin_round" android:id="@+id/imageViewOkarin"
                    android:visibility="visible" android:onClick="launchNewActivity"/>
            <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp" app:srcCompat="@drawable/mayuri2_round"
                    android:id="@+id/imageViewMayushii"
                    android:onClick="launchNewActivity"/>
            <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp" app:srcCompat="@drawable/daru_round" android:id="@+id/imageViewDaru"
                    android:onClick="launchNewActivity"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp">

            <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp" app:srcCompat="@drawable/kurisu_round" android:id="@+id/imageViewKurisu"
                    android:onClick="launchNewActivity"/>
            <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp" app:srcCompat="@drawable/moeka_round" android:id="@+id/imageViewMoeka"
                    android:onClick="launchNewActivity"/>
            <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp" app:srcCompat="@drawable/rukako_round" android:id="@+id/imageViewLukako"
                    android:onClick="launchNewActivity"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp">
            <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp" app:srcCompat="@drawable/faris_round" android:id="@+id/imageViewFaris"
                    android:onClick="launchNewActivity"/>
            <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp" app:srcCompat="@drawable/suzuha_round" android:id="@+id/imageViewSuzuha"
                    android:onClick="launchNewActivity"/>
            <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp" app:srcCompat="@drawable/maho_round_unavailable" android:id="@+id/imageViewMaho"
                    android:onClick="unavailable"/>
        </TableRow>

    </TableLayout>

    <ImageView
            android:layout_width="323dp"
            android:layout_height="74dp" app:srcCompat="@drawable/title_text" android:id="@+id/imageViewTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp" android:layout_marginStart="2dp"
            android:onClick="launchNewActivity"/>
    <ImageView
            android:layout_width="323dp"
            android:layout_height="74dp" app:srcCompat="@drawable/title_text" android:id="@+id/imageViewTitle2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="37dp" android:layout_marginStart="4dp" android:alpha="0.3"/>
    <ImageView
            android:layout_width="323dp"
            android:layout_height="74dp" app:srcCompat="@drawable/title_text" android:id="@+id/imageViewTitle3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="33dp" android:layout_marginStart="0dp" android:alpha="0.2"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewVersion"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>